#: import FadeTransition kivy.uix.screenmanager.FadeTransition

Manager:

	transition: FadeTransition()
	Screen1:
	Screen2:
	Screen3:

<Screen1>:
	name: "screen_one"
	BoxLayout:
		orientation: "vertical"
		RelativeLayout:
			canvas:
				Color:
					rgb: 1, 1, 1
				Rectangle:
					pos: (0, 0)
					size: self.size
			Image:
				keep_ratio: False
        		allow_stretch: True
				source: "images/logo.png"
				size_hint: None, None
				pos_hint: {'center_x':.5, 'center_y':.5}

			Label:
				font_name: "Roboto"
				markup: True
				size_hint: None, None
				text: "[b][color=24d39a]TICKETMOVIL[/color][/b]"
				pos_hint: {'center_x':.5, 'center_y':.1}

		RelativeLayout:
			canvas:
				Color:
					rgb: 1, 1, 1
				Rectangle:
					pos: (0,0)
					size: self.size
			Button:
				font_name: "Roboto"
				bold: True
				size_hint: None, None
				size: (200, 40)
				background_normal: "./images/button_normal_comprar.png"
    			background_down: "./images/button_down_comprar.png"
				pos_hint: {'center_x':.5, 'center_y':.5}
				text: "Comprar"
				on_release: app.root.current = "screen_two"

		RelativeLayout:
			canvas:
				Color:
					rgb: 1, 1, 1
				Rectangle:
					pos: (0, 0)
					size: self.size
			BoxLayout:
				orientation: "horizontal"
				RelativeLayout:
					Label:
						font_name: "Roboto"
						markup: True
						text: "[b][color=24d39a]Login[/color][/b]"
				RelativeLayout:
					Label:
						size_hint: None, None
						pos_hint: {'center_x':.5, 'center_y':.5}
						font_name: "Roboto"
						markup: True
						text: "[b][color=24d39a]Ayuda[/color][/b]"


<Screen2>:
	name: "screen_two"
	BoxLayout:
		orientation: "vertical"
		RelativeLayout:
			canvas:
				Color:
					rgb: 1, 1, 1
				Rectangle:
					pos: (0, 0)
					size: self.size
			Image:
				keep_ratio: False
        		allow_stretch: True
				source: "images/logo.png"
				size_hint: None, None
				pos_hint: {'center_x':.5, 'center_y':.5}

			Label:
				font_name: "Roboto"
				markup: True
				size_hint: None, None
				text: "[b][color=24d39a]TICKETMOVIL[/color][/b]"
				pos_hint: {'center_x':.5, 'center_y':.1}

		RelativeLayout:
			canvas:
				Color:
					rgb: 1, 1, 1
				Rectangle:
					pos: (0, 0)
					size: self.size
			BoxLayout:
				orientation: "vertical"
				padding: 10
				spacing: 20
				Button:
					font_name: "Roboto"
					bold: True
					background_normal: "./images/button_normal_comprar.png"
    				background_down: "./images/button_down_comprar.png"
					text: "Recargar Tarjeta"
				Button:
					font_name: "Roboto"
					bold: True
					background_normal: "./images/button_normal_comprar.png"
    				background_down: "./images/button_down_comprar.png"
					text: "Consultar Saldo"
					on_press: root.consultar_saldo()
				Button:
					font_name: "Roboto"
					bold: True
					background_normal: "./images/button_normal_comprar.png"
    				background_down: "./images/button_down_comprar.png"
					text: "Generar Pasaje"
					on_press: root.generar_ticket()

		RelativeLayout:
			canvas:
				Color:
					rgb: 1, 1, 1
				Rectangle:
					pos: (0, 0)
					size: self.size
			BoxLayout:
				orientation: "horizontal"
				RelativeLayout:
					Button:
						size_hint: None, None
						size: (40, 40)
						pos_hint: {'center_x':.5, 'center_y':.5}
						font_name: "Roboto"
						bold: True
						background_normal: "./images/button_normal_comprar.png"
	    				background_down: "./images/button_down_comprar.png"
						text: "<"
						on_release: app.root.current = "screen_one"
						
				RelativeLayout:
					Label:
						text: "Ayuda"
						size_hint: None, None
						pos_hint: {'center_x':.5, 'center_y':.5}
						font_name: "Roboto"
						markup: True
						text: "[b][color=24d39a]Ayuda[/color][/b]"

		

<Screen3>:
	name: "screen_three"

	BoxLayout:
		orientation: "vertical"

		BoxLayout:
			orientation: "vertical"

			canvas:
				Color:
					rgba: (104/255, 25/255, 25/255, 1)
				Rectangle:
					pos: self.pos
					size: self.size

			Label:
				text: "Screen 3"
				color: (1, 1, 1, 1)

		BoxLayout:
			orientation: "vertical"
			size_hint_y: .1

			Button:
				text: "Back"
				size_hint: (1, .1)
				on_release: app.root.current = "screen_two"
